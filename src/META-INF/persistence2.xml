<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="FarmaciaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>modelo.Venda</class>
    <class>modelo.Fornecedor</class>
    <class>modelo.Saida</class>
    <class>modelo.Imposto</class>
    <class>modelo.Cliente</class>
    <class>modelo.Seriefactura</class>
    <class>modelo.Empresa</class>
    <class>modelo.Produto</class>
    <class>modelo.Entrada</class>
    <class>modelo.Familia</class>
    <class>modelo.Vendedor</class>
    <class>modelo.Emprestimo</class>
    <class>modelo.Detalorg</class>
    <class>modelo.Movimento</class>
    <class>modelo.Caixa</class>
    <class>modelo.Tiposaida</class>
    <class>modelo.Vendaanulada</class>
    <class>modelo.Modelo</class>
    <class>modelo.Marca</class>
    <class>modelo.Entradafer</class>
    <class>modelo.Entradaviatura</class>
    <class>modelo.Ferramenta</class>
    <class>modelo.Manutencao</class>
    <class>modelo.Mecancoferramenta</class>
    <class>modelo.Mecanico</class>
    <class>modelo.Mecanicomanutencao</class>
    <class>modelo.Pecamanutencao</class>
    <class>modelo.Saidafer</class>
    <class>modelo.Tipomanutencao</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/oficina"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="eclipselink.connection-pool.default.initial" value="3"/>
      <property name="eclipselink.connection-pool.default.min" value="5"/>
      <property name="eclipselink.connection-pool.default.max" value="10"/>
      <property name="eclipselink.connection-pool.default.wait" value="3000"/>
    </properties>
  </persistence-unit>
</persistence>
